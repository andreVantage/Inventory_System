@model List<Inventory_System.Models.Product>
@{
    ViewData["Title"] = "Product List";
}
<h2 class="mb-3 text-center fs-1 mt-3">Product List</h2>

<div class="table-responsive border border-2 border-dark rounded-3 shadow-sm">
    <table class="table table-bordered table-hover  align-middle m-0">
        <thead class="bg-dark text-white sticky-top">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>
                        <a class="btn btn-sm btn-warning text-dark fw-semibold" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger fw-semibold"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal"
                                data-id="@item.Id"
                                data-name="@item.Name"
                                data-price="@item.Price"
                                data-category="@item.Category">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="DeleteConfirmed">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this product?</p>
                    <ul style="list-style:none;">
                        <li><strong>Name:</strong> <span id="productName"></span></li>
                        <li><strong>Price:</strong> <span id="productPrice"></span></li>
                        <li><strong>Description:</strong> <span id="productDesciption"></span></li>
                        <li><strong>Category:</strong> <span id="productCategory"></span></li>
                    </ul>
                    <input type="hidden" name="id" id="productId" />
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" asp-action="Delete">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
