@model Inventory_System.Models.Product;
@{
    ViewData["Title"] = "Create Product";

}

<h2 class="mb-4 text-center">Create Product</h2>
<form asp-action="Create" method="post" class="mx-auto form-control w-50">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" id="txtName" />
      
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" id="txtPrice"/>
    </div>
    <div class="form-group">
        <label for="Descripton">Descripton</label>
        <input type="text" class="form-control" asp-for="Description" id="txtDescription" />
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" asp-for="Category" id="txtCategory"/>
    </div>
   
    <button type="submit" class="btn btn-success mt-4" id="btnSubmit">Submit</button>
</form>
