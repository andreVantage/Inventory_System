@{
    ViewData["Title"] = "Dashboard";
}


<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold" style="color: #6c63ff;">Welcome to Inventory Manager</h1>
        <p class="text-muted fs-5">Easily manage products, track stock, and control your inventory efficiently.</p>
    </div>

    <div class="row g-4">
        <!-- Card 1: Products -->
        <div class="col-md-4">
            <div class="card pastel-card border-0 rounded-4 text-center p-4 h-100" style="background-color: #e0f7fa;">
                <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Products</h5>
                <p class="text-muted">View and manage all your listed products.</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-sm">View Products</a>
            </div>
        </div>

        <!-- Card 2: Add New Product -->
        <div class="col-md-4">
            <div class="card pastel-card border-0 rounded-4 text-center p-4 h-100" style="background-color: #fce4ec;">
                <i class="bi bi-plus-circle display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Add Product</h5>
                <p class="text-muted">Create a new item for your inventory.</p>
                <a asp-controller="Product" asp-action="Create" class="btn btn-success btn-sm">Add Product</a>
            </div>
        </div>

        <!-- Card 3: Reports -->
        <div class="col-md-4">
            <div class="card pastel-card border-0 rounded-4 text-center p-4 h-100" style="background-color: #fff3e0;">
                <i class="bi bi-graph-up-arrow display-4 text-warning mb-3"></i>
                <h5 class="fw-bold">Reports</h5>
                <p class="text-muted">Track your sales and product performance.</p>
                <a href="#" class="btn btn-warning btn-sm text-white">View Reports</a>
            </div>
        </div>
    </div>
</div
